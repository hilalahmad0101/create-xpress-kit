{{#if success}}
<div id="successMessage"
    class="fixed top-0 right-10 min-w-md max-w-md mt-4 p-4 bg-green-50 border border-green-200 rounded-md">
    <div class="flex">
        <svg class="max-w-[20px] min-w-[20px]  text-green-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path>
        </svg>
        <div class="ml-3">
            <p class="text-sm font-medium text-green-800">
                {{ message }}
            </p>
        </div>
    </div>
</div>
{{/if}}

